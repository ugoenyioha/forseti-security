# This is a template file that gets read into the Forseti Prereqs Wizard,
# so don't use this directly for your deployment template unless you know
# what you're doing.

imports:
- path: compute-engine/client/forseti-instance-client.py
  name: forseti-instance-client.py
- path: storage/bucket.py
  name: bucket.py

resources:

# Cloud Storage
- name: {FORSETI_BUCKET}
  type: bucket.py
  properties:
    location: {BUCKET_LOCATION}

# Compute Engine
- name: forseti-instance-client
  type: forseti-instance-client.py
  properties:
    # GCE instance properties
    image-project: osrb-222623
    image-family: centos-7-hardened
    instance-type: n1-standard-2
    region: {FORSETI_SERVER_REGION}
    zone: {FORSETI_SERVER_ZONE}

    service-account: forseti-server-gcp-939f427@forseti-ccdevmvp.iam.gserviceaccount.com
    service-account-scopes:
      - https://www.googleapis.com/auth/cloud-platform
    gcs-bucket: {FORSETI_BUCKET}

    vpc-host-project-id: {VPC_HOST_PROJECT_ID}
    vpc-host-network: forseti-network
    vpc-host-subnetwork: forseti-subnetwork

    # --- Forseti version
    # "forseti-version": Can be a tag or a branch.
    #
    # See https://github.com/GoogleCloudPlatform/forseti-security/releases
    # for a list of releases.
    forseti-version: {FORSETI_VERSION}
    src-path: https://github.com/GoogleCloudPlatform/forseti-security
    # --- end Forseti version
    
    metadata:
      items:
      -  key: user-data
         value: |
           #cloud-config

           users:
            - default
            - name: uenyioha
              groups: wheel
              shell: /bin/bash
              sudo: ['ALL=(ALL) NOPASSWD:ALL']
